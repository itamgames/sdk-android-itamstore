<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="60dp"
    android:layout_height="match_parent" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="66dp">
            <Button
                android:id="@+id/TRADE_SHOP_BTN"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null" />
            <ImageView
                android:id="@+id/TRADE_SHOP_IMG"
                android:layout_width="60dp"
                android:layout_height="28dp"
                android:layout_marginTop="12dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/trade_shop_disable_img"/>
            <TextView
                android:id="@+id/TRADE_SHOP_TEXT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="12dp"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/menu_trade_title_text"
                android:textColor="#cccccc"
                android:textSize="9sp"
                android:textStyle="normal"/>
            
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f2f2f2" />
        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="66dp">
            <Button
                android:id="@+id/MY_INVEN_BTN"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null" />
            <ImageView
                android:id="@+id/MY_INVEN_IMG"
                android:layout_width="60dp"
                android:layout_height="28dp"
                android:layout_marginTop="12dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/item_inven_disable_img"/>
            <TextView
                android:id="@+id/MY_INVEN_TEXT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="12dp"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/menu_inven_title_text"
                android:textColor="#cccccc"
                android:textSize="9sp"
                android:textStyle="normal"/>

        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f2f2f2" />
        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="66dp">
            <Button
                android:id="@+id/EOS_RESOURCE_BTN"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null" />
            <ImageView
                android:id="@+id/EOS_RESOURCE_IMG"
                android:layout_width="60dp"
                android:layout_height="28dp"
                android:layout_marginTop="12dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/eos_resource_enable_img"/>
            <TextView
                android:id="@+id/EOS_RESOURCE_TEXT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="12dp"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/menu_resource_title_text"
                android:textColor="#471b6b"
                android:textSize="9sp"
                android:textStyle="normal"/>

        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f2f2f2" />
    </LinearLayout>


</RelativeLayout>