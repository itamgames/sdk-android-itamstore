<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/EOS_RESOURCE_LL"
        android:layout_width="match_parent"
        android:layout_height="78dp" >
        <RelativeLayout
            android:id="@+id/EOS_TRANS_COPY_LL"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp">

            <TextView
                android:id="@+id/EOS_MAIN_NAME_TEXT"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:gravity="left|center_vertical"
                android:text=""
                android:textColor="#230f3b"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/EOS_STAKE_COPY_BTN"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/EOS_MAIN_NAME_TEXT"
                android:layout_centerVertical="true"
                android:background="@drawable/copy_img" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/EOS_TRANS_COPY_LL">
            <ImageView
                android:id="@+id/TRADE_SHOP_ITAM_LABEL_IMG"
                android:layout_width="31dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:background="@drawable/eos_label"/>

            <TextView
                android:id="@+id/TRADE_SHOP_ITAM_COUNT_TEXT"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/TRADE_SHOP_ITAM_LABEL_IMG"
                android:gravity="left|center_vertical"
                android:text=""
                android:textColor="#230f3b"
                android:textSize="12sp"
                android:textStyle="bold"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="112dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="22dp">
            <LinearLayout
                android:layout_width="32dp"
                android:layout_height="40dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Stake"
                    android:textColor="#999999"
                    android:textSize="9sp"
                    android:textStyle="normal" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Ustake"
                    android:textColor="#999999"
                    android:textSize="9sp"
                    android:textStyle="normal" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Refund"
                    android:textColor="#999999"
                    android:textSize="9sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/EOS_RESOURCE_STAKE_TEXT"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text=""
                    android:gravity="right"
                    android:textColor="#999999"
                    android:textSize="9sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/EOS_RESOURCE_UNSTAKE_TEXT"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text=""
                    android:gravity="right"
                    android:textColor="#999999"
                    android:textSize="9sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/EOS_RESOURCE_REFUND_TEXT"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text=""
                    android:gravity="right"
                    android:textColor="#999999"
                    android:textSize="9sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>